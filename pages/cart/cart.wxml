<!--pages/cart/cart.wxml-->
<view class="cart-container">
    <view class="address-wrapper" wx:if="{{!address.userName}}">
        <button type="primary" plain="{{true}}" bindtap="handleChooseAddress">添加收货地址</button>
    </view>
    <view class="addressContent" wx:else>
        <view class="contentLeft">
        <view class="userName">
            收货人：{{address.userName}}
        </view>
        <view class="detailAddress">
            {{address.all}}
        </view>
        </view>

        <view class="contentRight">
            {{address.telNumber}}
        </view>
    </view>
    <!-- 购物车内容 -->
    <view class="goods-list-content">
        <view class="cart-title">购物车</view>
        <view class="cart-main">
            <view class="cart-item" wx:for="{{cart}}" wx:key="goods_id">
                <view class="left">
                    <checkbox-group data-id="{{item.goods_id}}" bindchange="handleCheckBoxChange">
                        <checkbox color="red" checked="{{item.checked}}" />
                    </checkbox-group>
                </view>
                <view class="center">
                    <image mode="scaleToFill" src="{{item.goods_small_logo}}" />
                </view>
                <view class="right">
                    <view class="goods-text">{{item.goods_name}}</view>
                    <view class="goods-price-num">
                        <view class="price">
                            ￥{{item.goods_price}}
                        </view>
                        <view class="num">
                            <view class="reduce" bindtap="handleCalcNum" data-operation="{{-1}}" data-id="{{item.goods_id}}">-</view>
                            <view class="currentNum">{{item.num}}</view>
                            <view class="add" bindtap="handleCalcNum" data-operation="{{1}}" data-id="{{item.goods_id}}">+</view>
                        </view>
                    </view>
                </view>

            </view>
        </view>
    </view>
    <!-- 底部工具啦 -->
    <view class="bottm-tools">
        <view class="left">
            <checkbox-group bindchange="handleChangeAllChecked">
                <checkbox color="red" checked="{{allChecked}}">全选</checkbox>
            </checkbox-group>
        </view>
        <view class="center">
            <view class="price">合计：<text class="currentPrice">￥{{totalMoney}}</text></view>
            <view class="tip">已包含邮费</view>
        </view>
        <view class="right">
            结算({{totalNum}})
        </view>
    </view>
</view>
